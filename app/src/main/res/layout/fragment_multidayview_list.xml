<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/itemWhite">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/timetableHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/dayDisplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/itemWhite"
            android:divider="@drawable/row_item_divider"
            android:orientation="horizontal"
            android:showDividers="middle|beginning|end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/timesList"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/dayTextView0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textAlignment="center"
                tools:text="mon" />

            <TextView
                android:id="@+id/dayTextView1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textAlignment="center"
                tools:text="tue" />

            <TextView
                android:id="@+id/dayTextView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textAlignment="center"
                tools:text="wed" />

            <TextView
                android:id="@+id/dayTextView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textAlignment="center"
                tools:text="thu" />

            <TextView
                android:id="@+id/dayTextView4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textAlignment="center"
                tools:text="fri" />

            <TextView
                android:id="@+id/dayTextView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textAlignment="center"
                tools:text="sat" />

            <TextView
                android:id="@+id/dayTextView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textAlignment="center"
                tools:text="sun" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/timesList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dayDisplay" />

        <LinearLayout
            android:id="@+id/rowsList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/timesList"
            app:layout_constraintTop_toBottomOf="@id/dayDisplay"></LinearLayout>

        <LinearLayout
            android:id="@+id/events_columns"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:baselineAligned="false"
            android:divider="@drawable/row_item_divider"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/rowsList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/timesList"
            app:layout_constraintTop_toBottomOf="@id/dayDisplay">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/eventColumn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/eventColumn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/eventColumn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/eventColumn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/eventColumn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/eventColumn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/eventColumn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


</ScrollView>